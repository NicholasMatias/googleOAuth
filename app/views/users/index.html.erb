<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <tr>
      <%= render user %> 
      <td><%= link_to "Show this user", user %></td>
      <td><%= link_to "Edit this user", edit_user_path(user) %></td>
      <td><%= button_to "Destroy this user", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
